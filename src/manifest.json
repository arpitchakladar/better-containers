{
	"manifest_version": 2,
	"name": "Better Containers",
	"description": "A Firefox extension to better manage containers.",
	"permissions": [
		"cookies",
		"tabs",
		"storage",
		"webRequest",
		"contextualIdentities",
		"webNavigation",
		"webRequestBlocking",
		"<all_urls>"
	],
	"background": {
		"type": "module",
		"persistent": true
	},
	"browser_action": {
		"default_popup": "pages/configuration/index.html",
		"default_icon": "icons/icon-48.png"
	},
	"icons": {
		"48": "icons/icon-48.png"
	}
}

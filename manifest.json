{
	"manifest_version": 2,
	"name": "Better Containers",
	"version": "1.0",
	"description": "A Firefox extension to assign tabs to specific containers.",
	"permissions": [
		"cookies",
		"tabs",
		"storage",
		"webRequest",
		"*://*/*",
		"contextualIdentities"
	],
	"background": {
		"scripts": ["index.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "src/popup/index.html",
		"default_icon": "icons/icon-48.png"
	},
	"icons": {
		"48": "icons/icon-48.png"
	}
}
